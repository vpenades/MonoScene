//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// CONSTANTS
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

float3 FogColor;
float2 FogRange;

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// FUNCTIONS
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////


void ApplyFog(inout float4 sRGBA, float3 positionWS)
{
    float distance = length(positionWS - CameraPosition);

    float fogFactor = saturate((distance - FogRange.x) * FogRange.y);

    sRGBA.rgb = lerp(sRGBA.rgb, FogColor * sRGBA.a, fogFactor);
}
